{% extends 'base.html.twig' %}
{% block title %}Registration!{% endblock %}
{% block body %}
    <div class="alert alert-dark mt-3" role="alert">
        Registration page.
    </div>
{#    {{ form(form) }}#}

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.username) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.password) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}